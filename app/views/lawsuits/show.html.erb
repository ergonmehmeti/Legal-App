<div class="max-w-3xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center"><%= @lawsuit.title %></h1>

  <div class="space-y-4">
    <div class="flex justify-between items-center">
      <div>
        <strong class="text-gray-600">Paditesi:</strong>
        <p class="text-gray-800"><%= @lawsuit.plaintiff.present? ? @lawsuit.plaintiff : 'N/A' %></p>
      </div>

      <div>
        <strong class="text-gray-600">Numri i Lendes:</strong>
        <p class="text-gray-800"><%= @lawsuit.lawsuit_number.present? ? @lawsuit.lawsuit_number : 'N/A' %></p>
      </div>

      <div>
        <strong class="text-gray-600">Statusi:</strong>
        <p class="text-gray-800"><%= @lawsuit.status.present? ? @lawsuit.status.humanize : 'N/A' %></p>
      </div>

      <div>
        <strong class="text-gray-600">Kategoria:</strong>
        <p class="text-gray-800"><%= @lawsuit.category.present? ? @lawsuit.category_value : 'N/A' %></p>
      </div>
    </div>

    <div class="border rounded-lg p-4 bg-gray-50">
      <strong class="text-gray-600">Natyra e Kontekstit:</strong>
      <p class="text-gray-800"><%= @lawsuit.context_type.present? ? @lawsuit.context_type : 'N/A' %></p>
    </div>

    <div class="border rounded-lg p-4 bg-gray-50">
      <strong class="text-gray-600">Pershkrimi:</strong>
      <p class="text-gray-800"><%= @lawsuit.description.present? ? @lawsuit.description : 'N/A' %></p>
    </div>
  </div>

  <div class="flex justify-center space-x-4 mt-6">
    <%= link_to 'Edit', edit_lawsuits_path(category: @lawsuit.category, id: @lawsuit.id), class: 'bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition' %>
    <%= link_to 'Back to List', filtered_lawsuits_path(category: @lawsuit.category), class: 'bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition' %>
    <%= link_to 'Delete', destroy_lawsuits_path(category: @lawsuit.category, id: @lawsuit.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this lawsuit?\n\nThis will delete comments and documents also." }, class: 'bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition' %>
  </div>


</div>

