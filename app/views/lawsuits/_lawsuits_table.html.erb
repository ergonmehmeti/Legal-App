<div class="flex flex-col w-full">
  <div class="overlow-x-auto sm:mx-0.5 lg:mx-0.5">
    <div class="py-2 inline-block min-w-full">
      <div class="overlow-x-auto">
        <table class="min-w-full overflow-x-scroll">
          <thead class="bg-white border-b">
          <tr>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Titulli
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Paditesi
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Numri i Lendes
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Natyra e Kontekstit
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Kategoria
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Statusi
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Action
            </th>
          </tr>
          </thead>
          <tbody>
          <% lawsuits.each do |lawsuit| %>
            <tr class="bg-gray-50 border-b">
              <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800 underline">
                <%=link_to lawsuit.title, "#" %>
              </td>
              <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800 underline">
                <%= lawsuit.plaintiff.present? ? lawsuit.plaintiff : '#' %>
              </td>
              <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800 underline">
                <%= "#" %>
              </td>
              <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800 underline">
                <%= lawsuit.context_type.present? ? lawsuit.context_type : '#' %>
              </td>
              <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
                <%= lawsuit.category.present? ? lawsuit.category_value : '' %>
              </td>
              <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
                <%= lawsuit.status.present? ? lawsuit.status.humanize : '' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= link_to 'Show', "", class: 'text-blue-600 hover:text-blue-900' %>
                <%= link_to 'Edit', "", class: 'text-green-600 hover:text-green-900 ml-2' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>