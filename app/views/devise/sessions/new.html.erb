<div class="flex">
  <div class="w-full p-10">
    <div class="max-w-lg mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold mb-4 text-center">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
          <div class="relative">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 pl-8 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 text-sm" %>
            <i class="fas fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 text-sm"></i>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
          <div class="relative">
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 pl-8 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 text-sm" %>
            <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 text-sm"></i>
          </div>
        </div>


        <div class="mb-6">
          <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 text-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
